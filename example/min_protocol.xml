<?xml version="1.0" encoding="UTF-8"?>
<Protocol name="Minimal" desc="This is a very basic protocol">
  <Fields>
    <!--Declare all Fields -->
    <Field name="ambient" type="int" desc="value from ambient light sensor" />
  </Fields>
  <Packets>
    <!--Data packet -->
    <Packet name="AmbientData" desc="Message containing sensor data" >
      <Field name="ambient" req="true"/>
    </Packet>
    <!--Request Message-->
    <Packet name="RequestAmbient" desc="Message to request sensor data" response="AmbientData"/>
  </Packets>
</Protocol>
